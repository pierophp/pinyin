{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "target": "es2017",
    "sourceMap": true,
    "allowJs": true,
    "strict": true,
    "moduleResolution": "node",
    "baseUrl": "./app/",
    "outDir": "dist",
    "paths": {
      "*": ["./*"]
    }
  },
  "include": ["app/**/*", "../shared/**/*"],
  "exclude": ["node_modules", "dist", "storage", "**/*.test.ts"]
}
